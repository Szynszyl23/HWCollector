<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddInformation">

    <ImageButton
        android:id="@+id/backBT"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ver1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hor1"
        android:layout_margin="2dip"
        />

    <Button
        android:id="@+id/finishBT"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/hor2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_rectangle"
        android:text="SAVE"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/hor2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hor1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_margin="15dp" />

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton"
                android:layout_margin="10dp"
                android:text="PIECE NAME"
                android:textSize="27sp"
                android:textColor="#1f1f1f"/>

            <TextView
                android:id="@+id/seriesNumber"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/nameText"
                android:layout_alignBottom="@+id/nameText"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_alignParentRight="true"
                android:text="/250"
                android:textSize="20sp"
                android:textColor="#1f1f1f"
                android:gravity="center"
                />

            <Spinner
                android:id="@+id/seriesNumberSpinner"
                android:layout_width="100dp"
                android:layout_height="43dp"
                android:layout_alignStart="@id/seriesNumber"
                android:layout_alignTop="@id/seriesNumber"
                android:layout_marginStart="-80dp"
                android:layout_marginBottom="0dp"
                android:textSize="20sp"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/nameText"
                android:layout_margin="10dp"
                android:inputType="text"
                android:maxLength="50"
                android:textSize="22sp"
                android:textColor="#1f1f1f"
                />

            <TextView
                android:id="@+id/lettersCounter"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_below="@id/nameEditText"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/yearOfProduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lettersCounter"
                android:layout_margin="10dp"
                android:text="YEAR OF PRODUCTION"
                android:textSize="27sp"
                android:textColor="#1f1f1f"
                />

            <Spinner
                android:id="@+id/yearSpinner"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/yearOfProduction"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/yearSpinner"
                android:layout_margin="10dp"
                android:text="COLORS"
                android:textSize="27sp"
                android:textColor="#1f1f1f"
                />
            <RelativeLayout
                android:id="@+id/mainColorBackground"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="#1f1f1f"
                android:layout_below="@id/colors"
                android:layout_marginTop="10dp"
                android:layout_marginStart="6dp">
                <ImageButton
                    android:id="@+id/mainColor"
                    android:layout_width="117dp"
                    android:layout_height="117dp"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                />
            </RelativeLayout>

             <RelativeLayout
                android:id="@+id/secondColorBackground"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="#1f1f1f"
                android:layout_toEndOf="@id/mainColorBackground"
                android:layout_alignBottom="@id/mainColorBackground"
                android:layout_marginStart="6dp">
                <ImageButton
                    android:id="@+id/secondColor"
                    android:layout_width="117dp"
                    android:layout_height="117dp"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                    />
             </RelativeLayout>

             <RelativeLayout
                 android:id="@+id/thirdColorBackground"
                 android:layout_width="125dp"
                 android:layout_height="125dp"
                 android:background="#1f1f1f"
                 android:layout_toEndOf="@id/secondColorBackground"
                 android:layout_alignBottom="@id/mainColorBackground"
                 android:layout_marginStart="6dp">

                <ImageButton
                    android:id="@+id/thirdColor"
                    android:layout_width="117dp"
                    android:layout_height="117dp"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                />
             </RelativeLayout>

            <TextView
                android:id="@+id/textMainColor"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/mainColorBackground"
                android:layout_alignLeft="@id/mainColorBackground"
                android:text="MAIN COLOR"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#1f1f1f"
                />

            <TextView
                android:id="@+id/textSecondColor"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/secondColorBackground"
                android:layout_alignStart="@id/secondColorBackground"
                android:text="2ND COLOR"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#1f1f1f"
                />

            <TextView
                android:id="@+id/textThirdColor"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/thirdColorBackground"
                android:layout_alignStart="@id/thirdColorBackground"
                android:text="3RD COLOR"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#1f1f1f"
                />

            <CheckBox
                android:id="@+id/zamacRadioButton"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/colors"
                android:layout_alignBottom="@+id/colors"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@id/secondColorBackground"
                android:text="ZAMAC"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/wheelTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textMainColor"
                android:layout_margin="10dp"
                android:text="WHEEL TYPE"
                android:textSize="27sp"
                android:textColor="#1f1f1f"
                />

            <EditText
                android:id="@+id/wheelTypeEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/wheelTypeText"
                android:layout_margin="10dp"
                android:inputType="text"
                android:maxLength="50"
                android:textSize="22sp"
                android:textColor="#1f1f1f"
                />

            <TextView
                android:id="@+id/lettersCounter2"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_below="@id/wheelTypeEditText"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/wheelColors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lettersCounter2"
                android:layout_margin="10dp"
                android:text="WHEEL COLORS"
                android:textSize="27sp"
                android:textColor="#1f1f1f"
                />

            <RelativeLayout
                android:id="@+id/tireColorBackground"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="#1f1f1f"
                android:layout_below="@id/wheelColors"
                android:layout_marginTop="10dp"
                android:layout_marginStart="6dp">
                <ImageButton
                    android:id="@+id/tireColor"
                    android:layout_width="117dp"
                    android:layout_height="117dp"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wheelColorBackground"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="#1f1f1f"
                android:layout_toEndOf="@id/tireColorBackground"
                android:layout_alignBottom="@id/tireColorBackground"
                android:layout_marginStart="6dp">
                <ImageButton
                    android:id="@+id/wheelColor"
                    android:layout_width="117dp"
                    android:layout_height="117dp"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rimColorBackground"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="#1f1f1f"
                android:layout_toEndOf="@id/wheelColorBackground"
                android:layout_alignBottom="@id/tireColorBackground"
                android:layout_marginStart="6dp">
                <ImageButton
                    android:id="@+id/rimColor"
                    android:layout_width="117dp"
                    android:layout_height="117dp"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                />
            </RelativeLayout>

            <TextView
                android:id="@+id/textTireColor"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tireColorBackground"
                android:layout_alignLeft="@id/tireColorBackground"
                android:text="TIRE COLOR"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#1f1f1f"
                />

            <TextView
                android:id="@+id/textWheelColor"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/wheelColorBackground"
                android:layout_alignStart="@id/wheelColorBackground"
                android:text="WHEEL COLOR"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#1f1f1f"
                />

            <TextView
                android:id="@+id/textRimColor"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rimColorBackground"
                android:layout_alignStart="@id/rimColorBackground"
                android:text="RIM COLOR"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#1f1f1f"
                />

            <TextView
                android:id="@+id/seriesNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textRimColor"
                android:layout_margin="10dp"
                android:text="SERIES"
                android:textSize="27sp"
                android:textColor="#1f1f1f"
                />

            <EditText
                android:id="@+id/seriesNameEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/seriesNameText"
                android:layout_toEndOf="@id/seriesTypeSpinner"
                android:layout_margin="10dp"
                android:inputType="text"
                android:maxLength="50"
                android:textSize="22sp"
                android:textColor="#1f1f1f"
                />

            <TextView
                android:id="@+id/lettersCounter3"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_below="@id/seriesNameEditText"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/seriesTypeSpinner"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_below="@id/seriesNameText"
                android:layout_margin="10dp"
                />

        </RelativeLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.91" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />


</androidx.constraintlayout.widget.ConstraintLayout>